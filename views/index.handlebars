<img src='http://www.pngmart.com/files/5/Hamburger-PNG-Picture.png'/>
<h1 style="color: red">Eat-Da-Burger!</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            {{#each burger}} {{#unless devoured}}
            
            <div id="bob">
                <div id="uneatenBurger">
                    #{{id}} {{burger_name}}
                </div>

                <button class="burgerUntouched pull-right" id='devourBtn' data-id="{{id}}">Devour!</button>
            </div>
            <br>
            {{/unless}} {{/each}}
            
        </div>
        <div class="col-md-6">
            <div>
                {{#each burger}} {{#if devoured}}
                <div id="eatenBurger">
                    {{id}}  {{burger_name}}
                </div>
                {{/if}} {{/each}}
            </div>
        </div>
    </div>
</div>


<form>
    <div class='form-group'>
        <textarea rows='4' cols='50' id='whopper'></textarea>
        
    </div>
    <button class='btn btn-primary' type="submit" id="submit">Submit</button>
</form>
<br>
<p>Enter a Burger you want to eat Click the "Submit" button.</p>